        grid-area: sidebar;
    }

  .navbar {
        grid-area: navbar;
    }


    .sidebar2 {
        grid-area: sidebar2;
    }

    .content {
        grid-area: content;
    }

    .header {
        grid-area: header;
        text-align: center;
    }

    .footer {
        grid-area: footer;
        text-align: center;
    }

    .wrapper {
        background-color: #fff;
        color: #444;
    }

  .wrapper {
    display: grid;
    grid-gap: 1em;
    grid-template-areas:
        "header"
        "navbar"
        "sidebar"
        "content"
        "sidebar2"
        "footer"
  }

    @media only screen and (min-width: 500px)  {
    .wrapper {

        grid-template-columns: 20% auto;
        grid-template-areas:
            "header   header"
            "navbar navbar"
            "sidebar  content"
            "sidebar2 sidebar2"
            "footer   footer";
    }
    }

    @media only screen and (min-width: 600px)   {
        .wrapper {
      grid-gap: 0px;
            grid-template-columns: 240px auto 260px;
            grid-template-areas:
                "header  header  header"
                "navbar navbar  navbar"
                "sidebar content sidebar2"
                "footer  footer  footer";
     }
  }

